<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Marimar</title>
  <link rel="stylesheet" href="css/nuevo.css">

  <link rel="stylesheet" href="css/carrito.css">

  <link rel="shortcut icon" href="imagenes/carrito verde icon.ico" type="image/x-icon">
  <!--le inserto una pequeña imagen a la etiqueta />-->
</head>

<body>

  <%-include('partials/navegador')%>  
  
  <%-include('partials/chat_emergencia')%> 
  <header class="ecavesadocompra">

    <div class="mediodepago">

      <div class="targeta">
        <img src="/imagenes/carrito/master.png">
      </div>

      <div class="targeta">
        <img src="/imagenes/carrito/naranjatarjeta.jpeg">
      </div>

      <div class="targeta">
        <img src="/imagenes/carrito/visa.png">
      </div>

      <div class="targeta">
        <img src="/imagenes/carrito/mercadopago.png">
      </div>

      <div class="targeta">
        <img src="/imagenes/carrito/plata.png">
      </div>


      <button class="carrito">
        <img src="/imagenes/carrito/carrito-de-compras.png">
      </button>

    </div>

  </header>

  <main>
    <h2>Productos</h2>

    <ul class="productos-lista">
      <% productos.forEach(producto=> { %>
        <li>

          <!-- <img src="/imagenes/<%=producto.imagen%>" alt="<%= producto.marca %> <%= producto.descripcion %>"> -->

          <img height="350" width="350" src="../imagenes/<%=producto.imagen%>" alt="<%= producto.marca %> <%= producto.descripcion %>">


          <h2>
            <%= producto.marca %>
              <%= producto.descripcion %>
          </h2>
          <div>Precio: $<%= producto.precio %>
          </div>

          <div class="form-container">
            <a href="/<%=producto.id%>/edit">Editar</a>
            
            <a href="/<%=producto.id%>/delete">Eliminar</a>
          
          </div>
       
        </li>
        <% }) %>
    </ul>
  </main>

  <br>

  <div class="form-container">
    <a href="/create">Creación de un nuevo producto</a>
  </div>


  <%- include('../views/productos-nuevos.ejs') %>  


  <%-include('partials/pie_pagina') %>  


</body>

</html>